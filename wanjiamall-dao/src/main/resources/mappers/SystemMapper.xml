<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nf.wanjiamall.dao.SystemDao">
<resultMap id="BaseResultMap" type="com.nf.wanjiamall.entity.SystemEntity">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="key_name"  property="keyName" />
    <result column="key_value" property="keyValue" />
    <result column="add_time"  property="addTime" />
    <result column="update_time"  property="updateTime" />
    <result column="delted"  property="delted" />
</resultMap>

    <select id="selectByFreightValue" resultMap="BaseResultMap">
        select key_value from wanjia_system where id in (6,8)
    </select>

    <update id="updateFreight">
        update wanjia_system
        <set>
            <if test="systemEntity.keyValue != null">
                key_value = #{systemEntity.keyValue},
            </if>
            <if test="systemEntity.addTime != null">
                ,add_time = #{systemEntity.addTime},
            </if>
            <if test="systemEntity.updateTime != null">
                ,update_time = #{systemEntity.updateTime}
            </if>
        </set>
        where  id = #{id}
    </update>







    <select id="selectByOrderValue" resultMap="BaseResultMap">
        select key_value from wanjia_system where id in(1,4,11)
    </select>

    <update id="updateOrder">
        update wanjia_system
        <set>
            <if test="keyName != null">
                key_name = #{keyName}
            </if>
            <if test="keyValue != null">
                ,key_value = #{keyValue}
            </if>
            <if test="addTime != null">
                ,add_time = #{addTime},
            </if>
            <if test="updateTime != null">
                ,update_time = #{updateTime}
            </if>
            <if test="deleted != null">
                ,deleted = #{deleted}
            </if>
        </set>
        where delted = 0 and id = #{id}
    </update>

    <select id="selectByAppletValue" resultMap="BaseResultMap">
        select key_value from wanjia_system where id in(2,5,10,12,15,17,18)
    </select>

    <update id="updateApplet"  >
        update wanjia_system
        <set>
            <if test="keyName != null">
                key_name = #{keyName},
            </if>
            <if test="keyValue != null">
                key_value = #{keyValue},
            </if>
            <if test="addTime != null">
                add_time = #{addTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        where delted = 0 and id = #{id}
    </update>
</mapper>